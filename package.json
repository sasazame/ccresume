{
  "name": "@sasazame/ccresume",
  "version": "0.1.5",
  "description": "A TUI tool for browsing and resuming Claude Code conversations",
  "type": "module",
  "bin": {
    "ccresume": "./dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.tsx",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "tui",
    "terminal"
  ],
  "author": "ccresume contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sasazame/ccresume.git"
  },
  "bugs": {
    "url": "https://github.com/sasazame/ccresume/issues"
  },
  "homepage": "https://github.com/sasazame/ccresume#readme",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "clipboardy": "^4.0.0",
    "date-fns": "^4.1.0",
    "ink": "^5.2.1",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ink-testing-library": "^4.0.0",
    "jest": "^30.0.3",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ]
}
